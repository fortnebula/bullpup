pipeline {
  agent {
    label 'openstack'
  }
  environment {
    BRANCH = 'master'
    ARCH = 'x86_64'
    DISTRO = 'ubuntu'
    RELEASE = 'focal'

  }
  stages {
    stage('Clone Repos') {
      steps{
        dir('sources') {
            git branch: "${BRANCH}",
                url: 'https://github.com/fortnebula/bullpup.git'
          }
      }
    }
    stage('Build Keystone') {
      steps{
        sh "sudo distrobuilder build-dir containers/images/keystone.yaml keystone -o image.release=${RELEASE}"
        sh 'cd keystone'
        sh 'sudo tar -zcf ../keystone.tar.gz .'
      }
    }
  }
  post {
      always {
          archiveArtifacts artifacts: "*.gz", fingerprint: true
      }
  }
}
